datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  customer
  sale
}

enum DeliveryStatus {
  processing
  shipped
  delivered
}

model User {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  password   String
  role       UserRole   @default(customer)
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime?  @updatedAt @map("updated_at")

  // Relação com entregas
  deliveries Delivery[]

  @@map("users")
}

model Delivery {
  id          String         @id @default(uuid())
  userId      String         @map("user_id")
  description String
  status      DeliveryStatus @default(processing)
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime?      @updatedAt @map("updated_at")

  // Relação com usuário (Muitos entregas → 1 usuário)
  user User @relation(fields: [userId], references: [id])

  // Relação com logs (1 entrega → muitos logs)
  logs DeliveryLog[]

  @@map("deliveries")
}

model DeliveryLog {
  id          String    @id @default(uuid())
  description String
  deliveryId  String    @map("delivery_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")

  // Relação com entrega (muitos logs → 1 entrega)
  delivery Delivery @relation(fields: [deliveryId], references: [id])

  @@map("delivery_logs")
}
